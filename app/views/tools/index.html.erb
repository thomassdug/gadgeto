<div class="product-tools">
  <% @tools.each do |tool| %>
    <%= link_to root_path  do %>
      <div class ="product-cards">
        <img src="https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80">
